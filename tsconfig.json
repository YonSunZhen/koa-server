{
  "compilerOptions": {
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "paths": {
      "@service-fw": [ "./src/service-fw" ],
      "@dao": [ "./src/dao" ],
      "@common": [ "./src/common"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "copyStatic.ts",
    "rm-dist.ts"
  ]
}