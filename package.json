{
  "name": "koa-server",
  "version": "1.0.0",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "start": "nodemon -e ts --exec ts-node -r tsconfig-paths/register --files src/main.ts",
    "start:dev": "cross-env NODE_ENV=development npm run start",
    "start:test": "cross-env NODE_ENV=testing npm run start",
    "prod": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register --files src/main.ts",
    "test": "cross-env NODE_ENV=development jest --runInBand",
    "build": "npm run rm-dist && npm run build-ts && npm run copy-static",
    "build-ts": "tsc -b ./  --verbose",
    "copy-static": "ts-node copyStatic.ts",
    "rm-dist": "ts-node rm-dist.ts",
    "apidoc": "apidoc -i ./src -o ./doc/dist -c ./doc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "keywords": [
    "ms",
    "hcm"
  ],
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "^2.2.3",
    "axios": "^0.19.0",
    "config": "^3.2.4",
    "cron": "^1.7.2",
    "cross-env": "^6.0.3",
    "crypto": "^1.0.1",
    "crypto-js": "^3.1.9-1",
    "debug": "^4.1.1",
    "knex": "^0.20.8",
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa-compose": "^4.1.0",
    "koa-favicon": "^2.0.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static-server": "^1.4.0",
    "koa-views": "^6.2.1",
    "log4js": "^5.3.0",
    "log4js-extend": "^0.2.1",
    "moment": "^2.24.0",
    "mysql": "^2.17.1",
    "pg-promise": "^10.3.1",
    "pug": "^2.0.4",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/config": "0.0.36",
    "@types/cron": "^1.7.1",
    "@types/crypto-js": "^3.1.45",
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.19",
    "@types/koa": "2.0.50",
    "@types/koa-compose": "3.2.4",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/koa-views": "^2.0.3",
    "@types/log4js": "^2.3.5",
    "@types/mocha": "^5.2.7",
    "@types/mysql": "^2.15.8",
    "@types/node": "^12.7.5",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "apidoc": "^0.17.7",
    "cross-spawn": "^7.0.2",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "jest": "24.1.0",
    "nodemon": "^1.19.3",
    "shelljs": "^0.8.3",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "ts-jest": "24.0.0",
    "ts-node": "~7.0.0",
    "typescript": "~3.4.5"
  }
}
